process {
    executor = 'slurm'
    queue = 'BioCompute'
    time = '2d'
    memory = '48 GB'
    clusterOptions = '--account=warrenlab'

    // these are resources for most intensive step, cellranger count
    withName: crCount {
        memory = '240 GB'
        cpus = 26
    }
}

manifest {
    defaultBranch = 'main'
    homePage = 'https://github.com/WarrenLab/cellranger-nf'
    author = 'Edward S. Rice'
    version = '0.0.1'
}
